#include <stdio.h>
float speedlimit(float speed,float x)
{
	float temp ;
	temp=speed*(1-x)+x*10*6;
	if(temp>200)
	return(temp);
	else
	return 200;		
}
int main(int argc, char *argv[])
{
	float speed,s;
	float x;
	while (1){
		char i='1';
		printf("输入当前速度和减速系数x(0<=x<1)\n:");
		scanf("%f%f",&speed,&x);
		s=speedlimit(speed,x);
		printf("减速后速度为：%d\n",(int)s);
		printf("---输入0退出程序！\n");
		getchar();
		scanf("%c",&i);
		if(i=='0')
		break;
	}
	return 0;
}

